
@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <meta http-equiv="Content-Type" content="text/html; Charset=gb2312">
    <meta http-equiv="Content-Language" content="zh-CN">
    <meta name="viewport" content="width=device-width, initial-scale=1, user-scalable=no" />
    <title> 一个.NET程序员的个人博客网站</title>
    <link rel="shortcut icon" href="~/Logo_40.png" type="image/x-icon">
    <link href="~/Content/css/article-detail.min.css" rel="stylesheet" />
    <!--Layui-->
    <link href="~/Content/plug/layui/css/layui.css" rel="stylesheet" />
    <!--font-awesome-->
    <link href="~/Content/plug/font-awesome/css/font-awesome.min.css" rel="stylesheet" />
    <!--全局样式表-->
    <link href="~/Content/css/global.css" rel="stylesheet" />
    <script src="~/Content/js/prettify.js"></script>
    @RenderSection("styles", false)
</head>
<body>

    @RenderBody()

    <!-- 底部 -->
    <footer class="blog-footer">
        <p><span>Copyright</span><span>&copy;</span><span>2018</span><a href="http://www.contione.cn"></a><span>Design By HC</span></p>
        <p><a href="http://www.miibeian.gov.cn/" target="_blank">鄂ICP备17012018号</a></p>
    </footer>
    <!--侧边导航-->
    <ul class="layui-nav layui-nav-tree layui-nav-side blog-nav-left layui-hide" lay-filter="nav">
        <li class="layui-nav-item layui-this">
            <a href="/Home/Index"><i class="fa fa-home fa-fw"></i>&nbsp;网站首页</a>
        </li>
        <li class="layui-nav-item">
            <a href="/Article/Index"><i class="fa fa-file-text fa-fw"></i>&nbsp;文章专栏</a>
        </li>
        <li class="layui-nav-item">
            <a href="/Resource/Index"><i class="fa fa-tags fa-fw"></i>&nbsp;资源分享</a>
        </li>
        <li class="layui-nav-item">
            <a href="/Dribs/Index"><i class="fa fa-road fa-fw"></i>&nbsp;点点滴滴</a>
        </li>
        <li class="layui-nav-item">
            <a href="/About/Index"><i class="fa fa-info fa-fw"></i>&nbsp;关于本站</a>
        </li>
    </ul>
    <!--分享窗体-->
    <div class="blog-share layui-hide">
        <div class="blog-share-body">
            <div style="width: 200px;height:100%;">
                <div class="bdsharebuttonbox">
                    <a class="bds_qzone" data-cmd="qzone" title="分享到QQ空间"></a>
                    <a class="bds_tsina" data-cmd="tsina" title="分享到新浪微博"></a>
                    <a class="bds_weixin" data-cmd="weixin" title="分享到微信"></a>
                    <a class="bds_sqq" data-cmd="sqq" title="分享到QQ好友"></a>
                </div>
            </div>
        </div>
    </div>
    <script src="~/Content/js/jquery1.11.js"></script>
    <!--遮罩-->
    <div class="blog-mask animated layui-hide"></div>
    <!-- layui.js -->
    <script src="~/Content/plug/layui/layui.js"></script>
    <!-- 全局脚本 -->
    <script src="~/Content/js/global.js"></script>
    <!-- 本页脚本 -->
    <script src="~/Content/js/home.js"></script>
    <script src="~/Content/js/about.js"></script>
    <script src="~/Content/js/detail.js"></script>
    @RenderSection("scripts", false)
</body>
</html>
